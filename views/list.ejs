<!DOCTYPE html>
<html>
    <head>
        <title>To Do List</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <div class="box">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    To Do List
                </div>
                <ul class="list list-group list-group-flush">
                    <% arr.forEach(function(items){ %>
                        <form action="/delete" method="POST" >
                            <li class="list-group-item"><%= items.name %>&nbsp;<input name="checkbox1" type="checkbox" value= "<%= items._id %>" onchange="this.form.submit()" ></li>
                        </form>
                    <% })%>
                </ul>
              </div>
              <div class="inputtask">
                <form action="/" method="post">
                    <input type="text" placeholder="Enter your task" name="input">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">ADD</button>
                </form>
              </div>
        </div>
    </body>
</html>